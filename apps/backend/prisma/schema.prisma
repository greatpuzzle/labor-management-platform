generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

// ========== 사용자 및 회사 ==========

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String
  role      UserRole @default(COMPANY_ADMIN)
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([companyId])
  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  COMPANY_ADMIN
}

model Company {
  id             String     @id @default(cuid())
  name           String
  ceo            String
  address        String
  phone          String
  businessNumber String?    // 사업자등록번호
  stampImageUrl  String?
  users          User[]
  employees      Employee[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@map("companies")
}

// ========== 직원 정보 ==========

model Employee {
  id                        String         @id @default(cuid())
  companyId                 String
  company                   Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  name                      String
  phone                     String
  residentNumber            String?        // 주민등록번호
  dob                       String
  workingHours              String
  salary                    String
  contractPeriod            String
  disabilityLevel           DisabilityLevel
  disabilityType            String
  disabilityRecognitionDate String
  emergencyContactName      String
  emergencyContactPhone     String
  documentUrl               String?
  sensitiveInfoConsent      Boolean        @default(false)
  contractStatus            ContractStatus @default(DRAFT)
  contracts                 Contract[]
  workRecords               WorkRecord[]
  createdAt                 DateTime       @default(now())
  updatedAt                 DateTime       @updatedAt

  @@index([companyId])
  @@index([contractStatus])
  @@map("employees")
}

enum DisabilityLevel {
  SEVERE  // 중증
  MILD    // 경증
}

enum ContractStatus {
  DRAFT
  SENT
  COMPLETED
}

// ========== 계약서 ==========

model Contract {
  id             String         @id @default(cuid())
  employeeId     String
  employee       Employee       @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workingHours   String
  salary         String
  contractPeriod String
  signedAt       DateTime?
  signatureUrl   String?
  pdfUrl         String?
  status         ContractStatus @default(DRAFT)
  sentAt         DateTime?
  sentBy         String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([employeeId])
  @@index([status])
  @@map("contracts")
}

// ========== 근무 기록 ==========

model WorkRecord {
  id         String     @id @default(cuid())
  employeeId String
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  date       String
  startTime  DateTime
  endTime    DateTime?
  duration   Int?
  status     WorkStatus @default(IN_PROGRESS)
  notes      String     @default("")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([employeeId])
  @@index([date])
  @@index([status])
  @@map("work_records")
}

enum WorkStatus {
  IN_PROGRESS
  COMPLETED
}
