generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String
  role      UserRole @default(COMPANY_ADMIN)
  companyId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company? @relation(fields: [companyId], references: [id])

  @@index([email])
  @@index([companyId])
  @@map("users")
}

model Company {
  id                      String     @id @default(cuid())
  name                    String
  ceo                     String
  address                 String
  phone                   String
  stampImageUrl           String?
  createdAt               DateTime   @default(now())
  updatedAt               DateTime   @updatedAt
  businessNumber          String?
  lastWeeklyScheduleSentAt DateTime? // 마지막 주간 업무 지시 완료 시간
  employees               Employee[]
  users                   User[]

  @@map("companies")
}

model Employee {
  id                        String                 @id @default(cuid())
  companyId                 String
  name                      String
  phone                     String
  dob                       String
  workingHours              String
  salary                    String
  contractPeriod            String
  disabilityLevel           DisabilityLevel
  disabilityType            String
  disabilityRecognitionDate String
  emergencyContactName      String
  emergencyContactPhone     String
  documentUrl               String?
  severeCertificateUrl      String?                // 중증장애인확인서 사본 URL
  additionalTerms           String?                // 추가사항 (근로계약서에 표시)
  sensitiveInfoConsent      Boolean                @default(false)
  contractStatus            ContractStatus         @default(DRAFT)
  createdAt                 DateTime               @default(now())
  updatedAt                 DateTime               @updatedAt
  residentNumber            String?
  ci                        String?                // 본인인증 고유값 (CI)
  kakaoId                   String?                // 카카오 사용자 ID (소셜 로그인용)
  contracts                 Contract[]
  company                   Company                @relation(fields: [companyId], references: [id], onDelete: Cascade)
  workRecords               WorkRecord[]
  workSchedules             WorkSchedule[]
  pushNotificationToken     PushNotificationToken?

  @@index([companyId])
  @@index([contractStatus])
  @@index([ci])
  @@index([kakaoId])
  @@map("employees")
}

model Contract {
  id              String         @id @default(cuid())
  employeeId      String
  workingHours    String
  salary          String
  contractPeriod  String
  additionalTerms String?        // 추가사항
  signedAt        DateTime?
  signatureUrl   String?
  pdfUrl         String?
  status         ContractStatus @default(DRAFT)
  sentAt         DateTime?
  sentBy         String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  employee       Employee       @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([status])
  @@map("contracts")
}

model WorkRecord {
  id         String     @id @default(cuid())
  employeeId String
  date       String
  startTime  DateTime?
  endTime    DateTime?
  duration   Int?
  status     WorkStatus @default(NOT_STARTED)
  notes      String     @default("")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([date])
  @@index([status])
  @@map("work_records")
}

model WorkSchedule {
  id         String   @id @default(cuid())
  employeeId String
  date       DateTime @db.Date
  tasks      String[] // 업무 목록 (JSON 배열)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, date])
  @@index([employeeId])
  @@index([date])
  @@map("work_schedules")
}

model PushNotificationToken {
  id         String   @id @default(cuid())
  employeeId String   @unique
  token      String   @unique
  platform   String // 'android' | 'ios'
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
  @@index([token])
  @@map("push_notification_tokens")
}

enum UserRole {
  SUPER_ADMIN
  COMPANY_ADMIN
}

enum DisabilityLevel {
  SEVERE
  MILD
}

enum ContractStatus {
  DRAFT
  SENT
  COMPLETED
}

enum WorkStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}
